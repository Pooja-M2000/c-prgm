#include <stdio. h>
void main ()
  {
     char operator;
      float num1, num2, result;
      printf("Enter a number \t");
     scanf("%f", &num1);
     printf("Enter an operator\t"); 
     scanf("%c", &operator );
     printf("Enter the another number\n");
     scanf("%f", &num2);
     switch(operator)
       { 
           case '+' :
                  result =num1+num2;
                   break ;
           case '-' :
                  result=num1-num2;
                  break ;
           case '*' :
                  result =num1*num2;
                   break;
           case '/' :
                  result=num1/num2;
                  break ;
           defaultcase :
                 printf("You entered an invalid operator");
         }
          printf("\n The result of %f%c%f=%f", num1, operator, num2, result ;
  }
